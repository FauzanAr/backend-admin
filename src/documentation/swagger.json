{
    "openapi": "3.0.0",
    "info": {
        "title": "Backend Admin",
        "version": "1.0.0",
        "description": "Backend Admin API Documentation with Swagger"
    },
    "paths": {
      "/users/v1/login": {
        "post": {
            "summary": "Allow user login",
            "tags": ["Users"],
            "requestBody": {
                "content": {
                    "application/json": {
                        "schema": {
                            "$ref": "#/components/schema/request/user-login"
                        }
                    }
                }
            },
            "responses": {
                "200": {
                    "description": "Success login"
                },
                "400": {
                    "description": "Bad Request error"
                },
                "422": {
                    "description": "Validation error"
                }
            }
        }
    },
    "/users/v1/register": {
        "post": {
            "summary": "Allow user register",
            "tags": ["Users"],
            "requestBody": {
                "content": {
                    "application/json": {
                        "schema": {
                            "$ref": "#/components/schema/request/user-register"
                        }
                    }
                }
            },
            "responses": {
                "200": {
                    "description": "Success register"
                },
                "400": {
                    "description": "Bad Request error"
                },
                "422": {
                    "description": "Validation error"
                }
            }
        }
    },
    "/users/v1/send/otp": {
        "post": {
            "summary": "Allow user to send OTP to their email",
            "tags": ["Users"],
            "requestBody": {
                "content": {
                    "application/json": {
                        "schema": {
                            "$ref": "#/components/schema/request/user-send-otp"
                        }
                    }
                }
            },
            "responses": {
                "200": {
                    "description": "Success send otp"
                },
                "400": {
                    "description": "Bad Request error"
                },
                "422": {
                    "description": "Validation error"
                }
            }
        }
    },
    "/users/v1/me": {
        "get": {
            "summary": "Allow user get detail data",
            "tags": ["Users"],
            "security": [
                {
                    "bearerAuth": []
                }
            ],
            "responses": {
                "200": {
                    "description": "Success send otp"
                }
            }
        }
    },
    "/transactions/v1": {
        "get": {
            "summary": "Allow user get transactions",
            "tags": ["Transactions"],
            "security": [
                {
                    "bearerAuth": []
                }
            ],
            "responses": {
                "200": {
                    "description": "Success data"
                },
                "400": {
                    "description": "Bad Request error"
                },
                "422": {
                    "description": "Validation error"
                }
            }
        }
    },
    "/transactions/v1/count": {
        "get": {
            "summary": "Allow user get transactions by status",
            "tags": ["Transactions"],
            "security": [
                {
                    "bearerAuth": []
                }
            ],
            "responses": {
                "200": {
                    "description": "Success data"
                },
                "400": {
                    "description": "Bad Request error"
                },
                "422": {
                    "description": "Validation error"
                }
            }
        }
    },
    "tags": [

            {
                "name": "Users",
                "description": "The users managing API"
            },
            {
                "name": "Transactions",
                "description": "Api for transactions"
            }
        ]
    },
    "components": {
        "schema": {
            "request": {
                "user-login": {
                    "type": "object",
                    "properties": {
                        "userId": {
                            "type": "string",
                            "description": "Unique user id"
                        },
                        "corporateId": {
                            "type": "string",
                            "description": "Unique corporate id"
                        },
                        "password": {
                            "type": "string",
                            "description": "User password"
                        }
                    }
                },
                "user-register": {
                    "type": "object",
                    "properties": {
                        "corporateId": {
                            "type": "string",
                            "description": "Unique corporate id"
                        },
                        "corporateName": {
                            "type": "string",
                            "description": "Corporate name"
                        },
                        "userId": {
                            "type": "string",
                            "description": "Unique user id"
                        },
                        "userName": {
                            "type": "string",
                            "description": "User name"
                        },
                        "role": {
                            "type": "string",
                            "description": "User role",
                            "default": "Maker",
                            "enum": [
                                "Maker",
                                "Approver"
                            ]
                        },
                        "phoneNumber": {
                            "type": "string",
                            "description": "User phone number"
                        },
                        "email": {
                            "type": "string",
                            "description": "User email"
                        },
                        "verifCode": {
                            "type": "string",
                            "description": "User six verif code"
                        },
                        "password": {
                            "type":"string",
                            "description": "User password"
                        }
                    }
                },
                "user-send-otp": {
                    "type": "object",
                    "properties": {
                        "email": {
                            "type": "string",
                            "description": "User email"
                        },
                        "userName": {
                            "type": "string",
                            "description": "User name"
                        }
                    }
                }
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    }
}
  